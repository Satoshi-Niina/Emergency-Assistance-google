    "start:legacy": "node server.js",
    "start:debug": "node --inspect azure-server.mjs",
    "dev": "cross-env NODE_ENV=development PORT=8080 node dev-server.mjs",
    "dev:old": "cross-env NODE_ENV=development PORT=8080 tsx watch unified-hot-reload-server.js",
    "build": "echo 'No build needed - using .mjs files directly'",
    "build:server": "echo 'TypeScript build skipped - production uses .mjs files'",
    "prebuild": "echo Preparing deployment...",
    "postbuild": "echo Deployment package ready",
    "type-check": "tsc --noEmit --project ../tsconfig.server.json",
    "test": "echo No tests specified",
    "diagnose:blob": "node scripts/diagnose-blob-production.mjs"
  },
